{
    "name": "Python Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".devcontainer"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
    "remoteUser": "vscode",
    "extensions": [
        "ms-python.python"
    ]
}